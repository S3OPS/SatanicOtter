# API Keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# TikTok Configuration
# For TikTok, you need EITHER session ID (recommended) OR password (not both)
# Session ID is more reliable and doesn't require handling 2FA/captcha
# To get session ID: Login to TikTok in browser -> F12 -> Application -> Cookies -> Copy 'sessionid' value
TIKTOK_USERNAME=your_tiktok_username
TIKTOK_SESSION_ID=your_tiktok_session_id
# TIKTOK_PASSWORD=your_tiktok_password  # Only needed if not using SESSION_ID

# Instagram Configuration
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password
INSTAGRAM_GRAPH_API_TOKEN=your_graph_api_token
INSTAGRAM_ACCOUNT_ID=your_instagram_account_id

# Profile Automation (NEW - for 100% automated setup)
PROFILE_AUTOMATION_ENABLED=false
PROFILE_NICHE=highTicket
PROFILE_DRY_RUN=true

# Amazon Affiliate
AMAZON_AFFILIATE_TAG=your_amazon_tag

# Content Settings
POSTS_PER_DAY=5
TIMEZONE=America/New_York
VIDEO_LENGTH_MIN=15
VIDEO_LENGTH_MAX=30

# Posting Times (comma-separated, 24-hour format)
POSTING_TIMES=06:30,09:00,12:30,15:00,20:00

# Categories (comma-separated) - High-ticket focus
PRODUCT_CATEGORIES=electronics,home,fitness,professional

# Revenue Goals
DAILY_REVENUE_GOAL=1000
TARGET_AVG_COMMISSION=100
MIN_PRODUCT_PRICE=500
MAX_PRODUCT_PRICE=2500

# Automation Settings
AUTO_POST=false
MANUAL_REVIEW=true
BACKUP_CONTENT=true
